<UserControl x:Class="Library.View.SelectDictionaryMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library.View"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="110">
    <Grid>
        <local:PathButton Margin="25,40,0,0"
                Command="{Binding OnLoadBooksCommand}"
                Caption="Книги"
                Icon="{StaticResource BooksIcon}" HorizontalAlignment="Left"/>
        <local:PathButton Margin="22,139,0,0"
                Command="{Binding OnLoadGenresCommand}"
                Caption="Жанры"
                Icon="{StaticResource GenresIcon}" HorizontalAlignment="Left"/>
        <local:PathButton Margin="20,240,0,0"
                Command="{Binding OnLoadAuthorsCommand}"
                Caption="Авторы"
                Icon="{StaticResource AuthorsIcon}" HorizontalAlignment="Left"/>
        <local:PathButton Margin="15,340,0,0"
                Command="{Binding OnLoadPublishersCommand}"
                Caption="Издатели"
                Icon="{StaticResource PublishersIcon}" HorizontalAlignment="Left"/>
        <local:PathButton Margin="35,440,0,0"
                Command="{Binding OnLoadNextPageCommand}"
                Icon="{StaticResource RightArrowIcon}" HorizontalAlignment="Left"/>
    </Grid>
</UserControl>
