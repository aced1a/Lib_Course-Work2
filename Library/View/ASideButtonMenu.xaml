<UserControl x:Class="Library.View.ASideButtonMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="80">
    <Grid>
        <local:PathButton Grid.Column="0" Margin="0,40,0,0"
                Caption="Книги"
                Icon="{StaticResource BooksIcon}" HorizontalAlignment="Stretch"/>
        <local:PathButton Grid.Column="0" Margin="0,139,0,0"
                Caption="Жанры"
                Icon="{StaticResource GenresIcon}" HorizontalAlignment="Stretch"/>
        <local:PathButton Grid.Column="0" Margin="0,240,0,0"
                Caption="Авторы"
                Icon="{StaticResource AuthorsIcon}" HorizontalAlignment="Stretch"/>
        <local:PathButton Grid.Column="0" Margin="0,340,0,0"
                Caption="Издатели"
                Icon="{StaticResource PublishersIcon}" HorizontalAlignment="Stretch"/>
    </Grid>
</UserControl>
