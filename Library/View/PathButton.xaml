<UserControl x:Class="Library.View.PathButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library.View"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="60"
             VerticalAlignment="Top"
             HorizontalAlignment="Center">

    <Button x:Name="button" Style="{StaticResource ASideButtonStyle}" Template="{StaticResource ButtonTemplate}">
        <StackPanel Orientation="Vertical">

            <ContentControl x:Name="buttonSurface"/>
            <Label x:Name="buttonCaption"/>
        </StackPanel>
    </Button>
</UserControl>
